{
  "expo": {
    "name": "NomUp",
    "slug": "nomup",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nomup",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nomup.app",
      "infoPlist": {
        "NSCameraUsageDescription": "NomUp needs camera access to scan receipts and food photos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#F5F1E8",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.nomup.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F5F1E8",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow NomUp to access your camera to scan receipts and food photos"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow NomUp to access your photos to add grocery receipts"
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
